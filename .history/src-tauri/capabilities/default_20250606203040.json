{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-copy-file",
    "fs:allow-exists",
    "fs:allow-lstat",
    "fs:allow-mkdir",
    "fs:allow-open",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-read-text-file-lines",
    "fs:allow-remove",
    "fs:allow-remove-dir",
    "fs:allow-remove-file",
    "fs:allow-rename",
    "fs:allow-rename-file",
    "fs:allow-stat",
    "fs:allow-truncate",
    "fs:allow-watch",
    "fs:allow-watch-immediate",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:scope",
      "allow": ["**/*"]
    }
  ]
}
